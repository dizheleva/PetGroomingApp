@page
@using PetGroomingApp.Web.Areas.Identity.Pages.Account.Manage
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<partial name="_PageTitle" />

<section class="about_area py-5">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow border-0 rounded-4">
                    <div class="card-header primary-header text-white text-center py-4 rounded-top-4">
                        <h3 class="mb-0">
                            <i class="fa fa-download me-2"></i>Personal Data
                        </h3>
                    </div>
                    <div class="card-body p-4">
                        <div class="alert alert-info rounded-3 mb-4">
                            <h5 class="alert-heading">
                                <i class="fa fa-info-circle me-2"></i>About Personal Data
                            </h5>
                            <p class="mb-0">
                                Your account contains personal data that you have given us. This page allows you to download or delete that data.
                            </p>
                        </div>

                        <div class="d-grid gap-2">
                            <form method="post" asp-page-handler="Download" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-primary-custom w-100 rounded-pill px-4 fw-bold">
                                    <i class="fa fa-download me-2"></i>Download Personal Data
                                </button>
                            </form>

                            <hr class="my-4">

                            <div class="alert alert-warning rounded-3">
                                <h5 class="alert-heading">
                                    <i class="fa fa-exclamation-triangle me-2"></i>Delete Account
                                </h5>
                                <p class="mb-3">
                                    Deleting this data will permanently remove your account, and this cannot be recovered.
                                </p>
                                <form method="post" asp-page-handler="Delete" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger rounded-pill px-4 fw-bold" onclick="return confirm('Are you sure you want to delete your account? This action cannot be undone.');">
                                        <i class="fa fa-trash me-2"></i>Delete Account
                                    </button>
                                </form>
                            </div>

                            <a asp-page="./Index" class="btn btn-outline-secondary rounded-pill px-4 fw-semibold">
                                <i class="fa fa-arrow-left me-2"></i>Back to Account
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

