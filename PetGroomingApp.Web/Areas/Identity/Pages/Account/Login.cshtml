@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<partial name="_PageTitle" />

<section class="about_area py-5">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow border-0 rounded-4">
                    <div class="card-header primary-header text-white text-center py-4 rounded-top-4">
                        <h3 class="mb-0">
                            <i class="fa fa-sign-in me-2"></i>Log in
                        </h3>
                    </div>
                    <div class="card-body p-4">
                        <p class="text-center text-muted mb-4">Use a local account to log in.</p>
                        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="needs-validation" novalidate>
                            <div asp-validation-summary="All" class="text-danger mb-3"></div>
                            
                            <div class="mb-3">
                                <label asp-for="Input.Email" class="form-label fw-semibold">
                                    <i class="fa fa-envelope me-2"></i>Email
                                </label>
                                <input asp-for="Input.Email" class="form-control rounded-pill" />
                                <span asp-validation-for="Input.Email" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Input.Password" class="form-label fw-semibold">
                                    <i class="fa fa-lock me-2"></i>Password
                                </label>
                                <input asp-for="Input.Password" class="form-control rounded-pill" />
                                <span asp-validation-for="Input.Password" class="text-danger small"></span>
                            </div>

                            <div class="mb-4">
                                <div class="form-check">
                                    <input asp-for="Input.RememberMe" class="form-check-input" />
                                    <label asp-for="Input.RememberMe" class="form-check-label">
                                        Remember me
                                    </label>
                                </div>
                            </div>

                            <div class="d-grid mb-3">
                                <button type="submit" class="btn btn-primary-custom rounded-pill px-4 fw-bold">
                                    <i class="fa fa-sign-in me-2"></i>Log in
                                </button>
                            </div>

                            <div class="text-center">
                                <a asp-page="./ForgotPassword" class="text-decoration-none">
                                    <i class="fa fa-key me-1"></i>Forgot your password?
                                </a>
                                <br />
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">
                                    <i class="fa fa-user-plus me-1"></i>Don't have an account? Register
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
