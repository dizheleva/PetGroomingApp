@using PetGroomingApp.Web.ViewModels.Admin.Users
@model UserFormViewModel

@{
    ViewData["Title"] = "User Details";
}

<section class="about_area py-5">
    <div class="container mt-5">
        <div class="row justify-content-center mb-4">
            <div class="col-lg-8 text-center">
                <h1 class="display-5 mb-2 text-danger fw-bold">
                    <i class="bi bi-person-fill me-2"></i>@ViewData["Title"]
                </h1>
                <hr class="w-25 mx-auto border-warning mb-0">
            </div>
        </div>

        <div class="row justify-content-start mb-3">
            <div class="col-auto">
                <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="btn btn-outline-secondary fw-bold rounded-pill px-4">
                    <i class="bi bi-arrow-left"></i> Back to Users
                </a>
            </div>
        </div>

        <div class="card shadow border-0 rounded-4">
            <div class="card-body p-4">
                <div class="row">
                    <div class="col-md-12">
                        <div class="mb-3">
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-person-fill me-2 text-danger" style="font-size: 1.5rem;"></i>
                                <div>
                                    <div class="text-muted small">Name</div>
                                    <div class="fw-bold fs-4">@(Model.UserName ?? Model.Email)</div>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-envelope-fill me-2 text-danger" style="font-size: 1.5rem;"></i>
                                <div>
                                    <div class="text-muted small">Email</div>
                                    <div class="fw-bold fs-5">@Model.Email</div>
                                </div>
                            </div>
                        </div>
                        @if (!string.IsNullOrWhiteSpace(Model.FirstName) || !string.IsNullOrWhiteSpace(Model.LastName))
                        {
                            <div class="mb-3">
                                <div class="d-flex align-items-center mb-2">
                                    <i class="bi bi-person-badge me-2 text-danger" style="font-size: 1.5rem;"></i>
                                    <div>
                                        <div class="text-muted small">Full Name</div>
                                        <div class="fw-bold fs-5">@($"{Model.FirstName} {Model.LastName}".Trim())</div>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="mb-3">
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-shield-check me-2 text-danger" style="font-size: 1.5rem;"></i>
                                <div>
                                    <div class="text-muted small">Role</div>
                                    <div class="fw-bold fs-5">
                                        @if (!string.IsNullOrWhiteSpace(Model.SelectedRole))
                                        {
                                            <span class="badge bg-warning text-dark fw-bold px-3 py-2 rounded-pill">@Model.SelectedRole</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No role assigned</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="mt-4">
                            <a asp-area="Admin" asp-controller="Users" asp-action="Edit" asp-route-id="@Model.Id" 
                               class="btn btn-outline-warning rounded-pill px-4 fw-bold me-2">
                                <i class="bi bi-pencil-fill me-2"></i> Edit User
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

