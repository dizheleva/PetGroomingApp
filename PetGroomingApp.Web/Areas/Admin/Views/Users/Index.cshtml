@using PetGroomingApp.Web.ViewModels.Admin.Users
@using Microsoft.AspNetCore.Identity
@model IEnumerable<UserIndexViewModel>

@inject RoleManager<IdentityRole> roleManager;

@{
    ViewData["Title"] = "User Management";
    var successMessage = TempData["SuccessMessage"] as string;
    var errorMessage = TempData["ErrorMessage"] as string;
}

<section class="about_area py-5">
    <div class="container mt-5">
        <div class="row justify-content-center mb-4">
            <div class="col-lg-8 text-center">
                <h1 class="display-5 mb-2 text-danger fw-bold">
                    <i class="bi bi-people-fill me-2"></i>@ViewData["Title"]
                </h1>
                <hr class="w-25 mx-auto border-warning mb-0">
            </div>
        </div>

        <div class="row justify-content-between mb-3">
            <div class="col-auto">
                <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary fw-bold rounded-pill px-4">
                    <i class="bi bi-arrow-left"></i> Back to Dashboard
                </a>
            </div>
            <div class="col-auto">
                @if (!string.IsNullOrEmpty(successMessage))
                {
                    <span class="alert alert-success py-2 px-4 rounded-pill fw-semibold">@successMessage</span>
                }
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <span class="alert alert-danger py-2 px-4 rounded-pill fw-semibold">@errorMessage</span>
                }
            </div>
        </div>

        <div class="card shadow border-0 rounded-4">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table align-middle mb-0">
                        <thead style="background-color: #f14437; color: #fff;">
                            <tr class="text-center">
                                <th class="py-3">Email</th>
                                <th class="py-3">Roles</th>
                                <th class="py-3">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td class="align-middle">@user.Email</td>
                                    <td class="align-middle">
                                        @foreach (var role in user.Roles)
                                        {
                                            <span class="badge bg-warning text-dark fw-bold px-3 py-2 rounded-pill me-1">@role</span>
                                        }
                                    </td>
                                    <td class="text-center align-middle">
                                        <div class="d-flex justify-content-center align-items-center gap-2 flex-wrap">
                                            @if (!user.Roles.Contains("Admin"))
                                            {
                                                <select id="roleDropdown-@user.Id" class="form-select form-select-sm w-auto me-2">
                                                    @foreach (IdentityRole role in roleManager.Roles.ToList())
                                                    {
                                                        <option value="@role.Name" selected="@(user.Roles.Contains(role.Name) ? "selected" : null)">@role.Name</option>
                                                    }
                                                </select>

                                                <form method="post" asp-action="AssignRole" asp-controller="UserManagement" asp-area="Admin" class="d-inline">
                                                    <input type="hidden" name="userId" value="@user.Id" />
                                                    <input type="hidden" name="role" id="assignRoleInput-@user.Id" />
                                                    <button type="submit" class="btn btn-outline-primary btn-sm fw-bold px-3 py-2 rounded-pill"
                                                            onclick="setRoleValue('@user.Id', 'assignRoleInput')">
                                                        <i class="bi bi-person-plus-fill"></i> Assign
                                                    </button>
                                                </form>

                                                <form method="post" asp-action="RemoveRole" asp-controller="UserManagement" asp-area="Admin" class="d-inline">
                                                    <input type="hidden" name="userId" value="@user.Id" />
                                                    <input type="hidden" name="role" id="removeRoleInput-@user.Id" />
                                                    <button type="submit" class="btn btn-outline-warning btn-sm fw-bold px-3 py-2 rounded-pill"
                                                            onclick="setRoleValue('@user.Id', 'removeRoleInput')">
                                                        <i class="bi bi-person-x-fill"></i> Remove
                                                    </button>
                                                </form>

                                                <form method="post" asp-action="DeleteUser" asp-controller="UserManagement" asp-area="Admin" class="d-inline">
                                                    <input type="hidden" name="userId" value="@user.Id" />
                                                    <button type="submit" class="btn btn-outline-danger btn-sm fw-bold px-3 py-2 rounded-pill">
                                                        <i class="bi bi-trash-fill"></i> Delete
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <span class="text-muted fw-bold">Cannot edit Admin</span>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/js/userManagement.js" asp-append-version="true"></script>ersion="true"></script>