@using PetGroomingApp.Web.ViewModels.Pet
@model PetDetailsViewModel

@{
	ViewData["Title"] = @Model.Name + " Details";
}

<partial name="_PageTitle" />

<!-- Pet Details Section -->
<section class="pet_details_area py-5 bg-light">
	<div class="service_area pt-5 pb-5">
		<div class="container">
			<div class="row justify-content-center align-items-center">
				<!-- Image with Background -->
				<div class="col-md-5 mb-4 mb-md-0 d-flex justify-content-center">
					<div class="service_thumb d-flex align-items-center justify-content-center"
						 style="background-image: url('/img/service/service_icon_bg_1.png');
							background-size: contain;
							background-repeat: no-repeat;
							background-position: center;
							width: 220px;
							height: 220px;
							display: flex;
							align-items: center;
							justify-content: center;">
						<img src="~/@Model.ImageUrl" alt="@Model.Name" style="width: 80px; height: auto;">
					</div>
				</div>

				<!-- Details -->
				<div class="col-md-7">
					<h2 class="fw-bold mb-3">@Model.Name</h2>
					<p class="text-muted fs-5">@Model.Type.ToString(): <span class="fw-semibold">@Model.Breed</span></p>
					<hr />
					<p><strong>Gender:</strong> @Model.Gender</p>
					<p><strong>Age:</strong> @Model.Age</p>
					<p><strong>Size:</strong> @Model.Size</p>

					@if (!string.IsNullOrWhiteSpace(Model.Notes))
					{
						<div class="mt-3">
							<h5>Additional notes:</h5>
							<p class="text-muted">@Model.Notes</p>
						</div>
					}

					<!-- Buttons -->
					<div class="mt-4 d-flex flex-wrap gap-2">
						<div class="me-2 mb-2">
							<a asp-action="Index"
							   asp-controller="Pet"
							   class="btn btn-secondary btn-sm rounded-pill px-4 fw-bold">
								<i class="bi bi-arrow-left-circle"></i> All Pets
							</a>
						</div>

						<div class="me-2 mb-2">
							<a asp-controller="Pet"
							   asp-action="Edit"
							   asp-route-id="@Model.Id"
							   class="btn btn-info btn-sm rounded-pill px-4 fw-bold text-white">
								<i class="bi bi-pencil-square"></i> Edit
							</a>
						</div>

						<div class="mb-2">
							<a asp-controller="Pet"
							   asp-action="Delete"
							   asp-route-id="@Model.Id"
							   class="btn btn-danger btn-sm rounded-pill px-4 fw-bold text-white">
								<i class="bi bi-trash"></i> Delete
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
	