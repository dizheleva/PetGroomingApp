@using PetGroomingApp.Web.ViewModels.Pet
@model IEnumerable<AllPetsViewModel>

@{
    ViewData["Title"] = "Pets";
}

<partial name="_PageTitle" />

<!-- Pets Section -->
<section class="service_area py-5 bg-light">
    <div class="container justify-content-center">
        <div class="row mb-4">
            <div class="col-md-6">
                <a asp-controller="Pet" asp-action="Create" class="btn btn-primary-custom">
                    <i class="fa fa-plus me-2"></i> Add New Pet
                </a>
            </div>
            <div class="col-md-6">
                <form method="get" class="d-flex gap-2">
                    <input type="text" name="searchTerm" class="form-control rounded-pill" placeholder="Search by name or breed..." value="@ViewBag.SearchTerm">
                    <select name="typeFilter" class="form-select rounded-pill" style="max-width: 150px;">
                        <option value="">All Types</option>
                        <option value="Dog" selected="@(ViewBag.TypeFilter == "Dog")">Dog</option>
                        <option value="Cat" selected="@(ViewBag.TypeFilter == "Cat")">Cat</option>
                        <option value="Bird" selected="@(ViewBag.TypeFilter == "Bird")">Bird</option>
                        <option value="Other" selected="@(ViewBag.TypeFilter == "Other")">Other</option>
                    </select>
                    <button type="submit" class="btn btn-primary-custom rounded-pill">Search</button>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary rounded-pill">Clear</a>
                </form>
            </div>
        </div>
    </div>
    <div class="container">        
        @if (!Model.Any())
        {
            <div class="alert alert-warning text-center">
                <strong>You do not have any pets yet!</strong>
            </div>
        }
        else
        {
            <div class="row justify-content-center">
                @foreach (var pet in Model)
                {
                    <div class="col-lg-4 col-md-6 d-flex align-items-stretch mb-4">
                        <div class="pet-card shadow-lg d-flex flex-column w-100" style="background: white; border-radius: 16px; overflow: hidden; transition: all 0.3s ease; border: none;">
                            @if (string.IsNullOrWhiteSpace(pet.ImageUrl))
                            {
                                <div class="pet-image-container d-flex align-items-center justify-content-center" style="height: 240px; background: linear-gradient(135deg, #f14437 0%, #ff6b5a 100%); border-radius: 16px 16px 0 0; overflow: hidden; position: relative;">
                                    <div style="position: relative; z-index: 2; text-align: center;">
                                        <i class="fa fa-paw" style="font-size: 100px; color: white; filter: drop-shadow(0 4px 8px rgba(0,0,0,0.3));"></i>
                                    </div>
                                    <div style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: url('/img/service/service_icon_bg_1.png') center/contain no-repeat; opacity: 0.1; z-index: 1;"></div>
                                </div>
                            }
                            else
                            {
                                <div class="pet-image-container d-flex align-items-center justify-content-center" style="height: 240px; overflow: hidden; background: linear-gradient(135deg, #f5f5f5 0%, #e8e8e8 100%); border-radius: 16px 16px 0 0; position: relative;">
                                    <img src="@pet.ImageUrl" alt="@pet.Name" class="img-fluid" style="width: 100%; height: 100%; object-fit: cover; transition: transform 0.3s ease;" />
                                    <div style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: linear-gradient(to bottom, transparent 0%, rgba(0,0,0,0.05) 100%); pointer-events: none;"></div>
                                </div>
                            }
                            <div class="pet-content text-center p-4 d-flex flex-column flex-grow-1 justify-content-between" style="background: white;">
                                <div>
                                    <h5 class="fw-bold mb-2" style="color: #2c3e50; font-size: 1.5rem; letter-spacing: -0.5px;">@pet.Name</h5>
                                    <div class="pet-info mb-3" style="display: flex; align-items: center; justify-content: center; gap: 8px; flex-wrap: wrap;">
                                        <span class="badge rounded-pill" style="background: linear-gradient(135deg, #f14437 0%, #ff6b5a 100%); color: white; padding: 6px 14px; font-size: 0.85rem; font-weight: 600;">
                                            <i class="fa fa-paw me-1"></i> @pet.Type
                                        </span>
                                        <span class="text-muted" style="font-size: 0.95rem; font-weight: 500;">
                                            @pet.Breed
                                        </span>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <a asp-controller="Pet" asp-action="Details" asp-route-id="@pet.Id" class="btn btn-details rounded-pill px-4 py-2 fw-bold" style="background: linear-gradient(135deg, #f14437 0%, #ff6b5a 100%); color: white; border: none; transition: all 0.3s ease; box-shadow: 0 4px 15px rgba(241, 68, 55, 0.3);">
                                        <i class="fa fa-info-circle me-2"></i> View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }

        <!-- Pagination -->
        @if (ViewBag.Pagination != null)
        {
            <partial name="_PaginationPartial" model="ViewBag.Pagination" />
        }
    </div>
</section>
