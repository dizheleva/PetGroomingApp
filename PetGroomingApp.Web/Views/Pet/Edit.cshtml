@model PetGroomingApp.Web.ViewModels.Pet.PetFormViewModel

@{
    ViewData["Title"] = "Edit " + @Model.Name;
}

<div class="container mt-5">
    <h2 class="text-center fw-bold mb-4">@ViewData["Title"]</h2>
    <hr class="mb-4">

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" method="post" class="bg-light p-4 rounded-4 shadow-sm border">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Pet Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Type</label>
                    <select asp-for="Type" class="form-select">
                        @foreach (var type in Enum.GetValues(typeof(PetGroomingApp.Data.Models.Enums.PetType)))
                        {
                            <option value="@((int)type)">@type</option>
                        }
                    </select>
                    <span asp-validation-for="Type" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Size</label>
                    <select asp-for="Size" class="form-select">
                        @foreach (var size in Enum.GetValues(typeof(PetGroomingApp.Data.Models.Enums.PetSize)))
                        {
                            <option value="@((int)size)">@size</option>
                        }
                    </select>
                    <span asp-validation-for="Size" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Gender</label>
                    <select asp-for="Gender" class="form-select">
                        @foreach (var gender in Enum.GetValues(typeof(PetGroomingApp.Data.Models.Enums.PetGender)))
                        {
                            <option value="@((int)gender)">@gender</option>
                        }
                    </select>
                    <span asp-validation-for="Gender" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Breed" class="form-label">Breed</label>
                    <input asp-for="Breed" class="form-control" />
                    <span asp-validation-for="Breed" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Age" class="form-label">Age</label>
                    <input asp-for="Age" type="number" class="form-control" />
                    <span asp-validation-for="Age" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImageUrl" class="form-label">Image URL</label>
                    <input asp-for="ImageUrl" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Notes" class="form-label">Notes</label>
                    <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Notes" class="text-danger small"></span>
                </div>

                <div class="text-center mt-4 d-flex justify-content-center gap-2">
                    <button type="submit" class="btn btn-success fw-bold px-4 rounded-pill">
                        <i class="bi bi-plus-circle"></i> Save Changes
                    </button>
                    <a asp-action="Manage" class="btn btn-outline-secondary fw-semibold px-4 rounded-pill">
                        <i class="bi bi-arrow-left-circle"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}