@model PetGroomingApp.Web.ViewModels.Pet.PetDetailsViewModel

@{
    ViewData["Title"] = "Delete " + Model.Name;
}

<div class="container mt-5">
    <h2 class="text-center text-danger fw-bold">@ViewData["Title"]</h2>
    <hr class="mb-4">

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="p-4 border border-danger rounded shadow-sm bg-light text-center">
                <h4 class="text-danger mb-4">Are you sure you want to delete this pet?</h4>

                <dl class="row">
                    <dt class="col-sm-3">Image:</dt>
                    <dd class="col-sm-9">
                        <img src="~/@Model.ImageUrl" alt="@Model.Name" class="img-thumbnail" style="max-width: 200px;">
                    </dd>

                    <dt class="col-sm-3">Name:</dt>
                    <dd class="col-sm-9">@Model.Name</dd>

                    <dt class="col-sm-3">@Model.Type:</dt>
                    <dd class="col-sm-9">@Model.Breed</dd>

                    <dt class="col-sm-3">Age:</dt>
                    <dd class="col-sm-9">@Model.Age</dd>
                </dl>

                <form asp-action="DeleteConfirmed" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-danger fw-bold px-4 rounded-pill">
                            <i class="bi bi-trash"></i> Confirm Delete
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary fw-semibold px-4 rounded-pill">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
