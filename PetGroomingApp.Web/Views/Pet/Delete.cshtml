@model PetGroomingApp.Web.ViewModels.Pet.PetDetailsViewModel

@{
    ViewData["Title"] = "Delete " + Model.Name;
}

<partial name="_PageTitle" />

<section class="about_area py-5">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow border-0 rounded-4">
                    <div class="card-header bg-danger text-white text-center py-4 rounded-top-4">
                        <h3 class="mb-0">
                            <i class="fa fa-exclamation-triangle me-2"></i>Delete Pet: @Model.Name
                        </h3>
                    </div>
                    <div class="card-body p-4">
                        <div class="alert alert-warning rounded-3 mb-4">
                            <i class="fa fa-warning me-2"></i>
                            <strong>Warning!</strong> Are you sure you want to delete this pet? This action cannot be undone.
                        </div>

                        <div class="border rounded-3 p-4 mb-4">
                            <dl class="row">
                                <dt class="col-sm-3">Image:</dt>
                                <dd class="col-sm-9">
                                    <img src="~/@Model.ImageUrl" alt="@Model.Name" class="img-thumbnail rounded-3" style="max-width: 200px;">
                                </dd>

                                <dt class="col-sm-3 fw-semibold">Name:</dt>
                                <dd class="col-sm-9">@Model.Name</dd>

                                <dt class="col-sm-3 fw-semibold">Type:</dt>
                                <dd class="col-sm-9">@Model.Type</dd>

                                <dt class="col-sm-3 fw-semibold">Breed:</dt>
                                <dd class="col-sm-9">@Model.Breed</dd>

                                <dt class="col-sm-3 fw-semibold">Age:</dt>
                                <dd class="col-sm-9">@Model.Age</dd>
                            </dl>
                        </div>

                        <form asp-action="DeleteConfirmed" method="post" class="needs-validation" novalidate>
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="Id" />
                            <div class="d-flex justify-content-between gap-2">
                                <button type="submit" class="btn btn-danger rounded-pill px-4 fw-bold" onclick="return confirm('Are you sure you want to delete this pet? This action cannot be undone.');">
                                    <i class="fa fa-trash me-2"></i>Confirm Delete
                                </button>
                                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary rounded-pill px-4 fw-semibold">
                                    <i class="fa fa-arrow-left me-2"></i>Cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
