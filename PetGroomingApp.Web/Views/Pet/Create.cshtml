@model PetGroomingApp.Web.ViewModels.Pet.PetFormViewModel

@{
    ViewData["Title"] = "Add New Pet";
}

<partial name="_PageTitle" />

<section class="about_area py-5">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow border-0 rounded-4">
                    <div class="card-header primary-header text-white text-center py-4 rounded-top-4">
                        <h3 class="mb-0">
                            <i class="fa fa-paw me-2"></i>Add New Pet
                        </h3>
                    </div>
                    <div class="card-body p-4">
                        <form asp-action="Create" method="post" class="needs-validation" novalidate>
                            @Html.AntiForgeryToken()
                            <div asp-validation-summary="All" class="text-danger mb-3"></div>

                            <div class="mb-3">
                                <label asp-for="Name" class="form-label fw-semibold">
                                    <i class="fa fa-tag me-2"></i>Pet Name
                                </label>
                                <input asp-for="Name" class="form-control rounded-pill" />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-semibold">
                                    <i class="fa fa-list me-2"></i>Type
                                </label>
                                <select asp-for="Type" class="form-select rounded-pill">
                                    @foreach (var type in Enum.GetValues(typeof(PetGroomingApp.Data.Models.Enums.PetType)))
                                    {
                                        <option value="@((int)type)">@type</option>
                                    }
                                </select>
                                <span asp-validation-for="Type" class="text-danger small"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-semibold">
                                        <i class="fa fa-ruler me-2"></i>Size
                                    </label>
                                    <select asp-for="Size" class="form-select rounded-pill">
                                        @foreach (var size in Enum.GetValues(typeof(PetGroomingApp.Data.Models.Enums.PetSize)))
                                        {
                                            <option value="@((int)size)">@size</option>
                                        }
                                    </select>
                                    <span asp-validation-for="Size" class="text-danger small"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-semibold">
                                        <i class="fa fa-venus-mars me-2"></i>Gender
                                    </label>
                                    <select asp-for="Gender" class="form-select rounded-pill">
                                        @foreach (var gender in Enum.GetValues(typeof(PetGroomingApp.Data.Models.Enums.PetGender)))
                                        {
                                            <option value="@((int)gender)">@gender</option>
                                        }
                                    </select>
                                    <span asp-validation-for="Gender" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Breed" class="form-label fw-semibold">
                                    <i class="fa fa-dna me-2"></i>Breed
                                </label>
                                <input asp-for="Breed" class="form-control rounded-pill" />
                                <span asp-validation-for="Breed" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Age" class="form-label fw-semibold">
                                    <i class="fa fa-birthday-cake me-2"></i>Age
                                </label>
                                <input asp-for="Age" type="number" class="form-control rounded-pill" />
                                <span asp-validation-for="Age" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="ImageUrl" class="form-label fw-semibold">
                                    <i class="fa fa-image me-2"></i>Image URL
                                </label>
                                <input asp-for="ImageUrl" class="form-control rounded-pill" />
                                <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Notes" class="form-label fw-semibold">
                                    <i class="fa fa-sticky-note me-2"></i>Notes
                                </label>
                                <textarea asp-for="Notes" class="form-control rounded-3" rows="3"></textarea>
                                <span asp-validation-for="Notes" class="text-danger small"></span>
                            </div>


                            <div class="d-flex justify-content-between gap-2 mt-4">
                                <button type="submit" class="btn btn-primary-custom rounded-pill px-4 fw-bold">
                                    <i class="fa fa-plus-circle me-2"></i>Create Pet
                                </button>
                                <a asp-action="Index" asp-controller="Pet" class="btn btn-outline-secondary rounded-pill px-4 fw-semibold">
                                    <i class="fa fa-arrow-left me-2"></i>Cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
