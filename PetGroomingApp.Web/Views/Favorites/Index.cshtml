@using PetGroomingApp.Web.ViewModels.Favorites
@model IEnumerable<FavoritesViewModel>

@{
    ViewData["Title"] = "My Favorites";
}

<div class="bradcam_area breadcam_bg">
    <div class="container">
        <div class="row">
            <div class="col text-center">
                <div class="bradcam_text">
                    <h3>@ViewData["Title"]</h3>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container mt-4">
    
    @if (!Model.Any())
    {
        <div class="alert alert-danger text-center">
            <p><strong>Your favorites list is empty!</strong></p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary rounded-pill fw-bold">
                <i class="bi bi-arrow-left"></i> Back to Home
            </a>
        </div>
    }
    else
    {
        <div class="d-flex flex-column gap-2">
            @foreach (var service in Model)
            {
                <div class="card shadow-lg border-0 rounded-3 d-flex flex-row align-items-center p-2"
                     style="height: 140px; max-height: 140px;">

                    <img src="@service.ImageUrl" class="rounded"
                         alt="@service.Name"
                         style="width: 100px; height: 130px; object-fit: cover;">

                    <div class="card-body ms-3 p-2 text-light" style="flex-grow: 1;">
                        <h6 class="fw-bold mb-1 text-dark">@service.Name</h6>
                        <p class="text-muted mb-1" style="font-size: 0.85rem;">
                            <strong>Price:</strong> @service.Price €
                        </p>
                    </div>

                    <div class="me-3">
                        <a asp-controller="Service"
                           asp-action="Details"
                           asp-route-id="@service.ServiceId"
                           class="btn btn-outline-primary btn-sm rounded-pill px-3">
                            <i class="fas fa-eye"></i> Details
                        </a>

                        <form asp-controller="Favorites" asp-action="Remove" method="post" class="d-inline">
                            <input type="hidden" name="movieId" value="@service.ServiceId" />
                            <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill px-3">
                                <i class="fas fa-trash"></i> Remove
                            </button>
                        </form>
                    </div>
                </div>
            }

            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary rounded-pill  fw-bold">
                <i class="bi bi-arrow-left"></i> Back to Home
            </a>
        </div>
    }
</div>

<link rel="stylesheet" href="~/css/user.css">