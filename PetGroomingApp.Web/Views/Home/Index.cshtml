@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Banner Section -->
<section class="banner-area">
    <div class="slider_area">
        <div class="single_slider slider_bg_1 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-lg-5 col-md-6">
                        <div class="slider_text">
                            <h3>We Groom <br> <span>Your Pets</span></h3>
                            <p>Give your precious pets the love and care they deserve</p>
                            <div class="text-end mt-3">
                                @if (User.Identity?.IsAuthenticated == true)
                                {
                                    <a asp-controller="Appointment" asp-action="Create" class="btn btn-light rounded-pill fw-bold shadow-lg d-flex align-items-center justify-content-center ms-auto" style="transition: all 0.3s ease; transform: translateY(0); color: #f14437 !important; padding: 12px 32px; width: auto; display: inline-flex; font-size: 15px;">
                                        <i class="fa fa-calendar-check me-2" style="font-size: 1.1rem;"></i>
                                        <span>Book Now</span>
                                    </a>
                                }
                                else
                                {
                                    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-light rounded-pill fw-bold shadow-lg d-flex align-items-center justify-content-center ms-auto" style="transition: all 0.3s ease; transform: translateY(0); color: #f14437 !important; padding: 12px 32px; width: auto; display: inline-flex; font-size: 15px;">
                                        <i class="fa fa-calendar-check me-2" style="font-size: 1.1rem;"></i>
                                        <span>Book Now</span>
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="dog_thumb d-none d-lg-block">
                <img src="img/banner/dog.png" alt="">
            </div>
        </div>
    </div>
</section>

<!-- About Section  -->
<section class="about_area">
    <div class="pet_care_area">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-5 col-md-6">
                    <div class="pet_thumb">
                        <img src="img/about/pet_care.png" alt="">
                    </div>
                </div>
                <div class="col-lg-6 offset-lg-1 col-md-6">
                    <div class="pet_info">
                        <div class="section_title">
                            <h3>
                                <span>We care your pet </span> <br>
                                As you care
                            </h3>
                            <p>
                                Here at our <em>Pet Groomong Salon</em>, we pride ourselves on offering the best possible service available to both you and your pet and we begin this on your very first visit with our complimentary consultation.
                            </p>
                            <p>The consultation allows us to understand your dog’s personality, find out more about their grooming history and allows us to form a relationship of trust with the owner. We know that no two dogs are the same and animals react differently to their surroundings and to the stress that grooming can place on them, especially if they haven’t been groomed before. This first visit allows us to put them at ease.</p>
                            
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <a asp-controller="Appointment" asp-action="Create" class="btn btn-primary-custom rounded-pill px-4 fw-bold shadow-sm" style="transition: all 0.3s ease;">
                                    <i class="fa fa-calendar-check me-2"></i> Book Appointment
                                </a>
                            }
                            else
                            {
                                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary-custom rounded-pill px-4 fw-bold shadow-sm" style="transition: all 0.3s ease;">
                                    <i class="fa fa-calendar-check me-2"></i> Book Appointment
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

