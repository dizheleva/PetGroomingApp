@{
    ViewData["Title"] = "Page Not Found";
}

<partial name="_PageTitle" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card text-center shadow rounded-4 border-0 p-4">
                <div class="card-body">
                    <h1 class="display-3 text-warning fw-bold">404</h1>
                    <h3 class="card-title mb-3">Page Not Found</h3>
                    <p class="card-text mb-4 text-muted">
                        Oops! The page you’re looking for doesn’t exist or has been moved.<br />
                        Check the URL or return to the homepage.
                    </p>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary px-4 rounded-pill fw-semibold">
                        <i class="bi bi-house-door-fill"></i> Go to Homepage
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

