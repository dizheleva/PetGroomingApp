@model PetGroomingApp.Web.ViewModels.PaginationViewModel

@if (Model.TotalPages > 1)
{
    var request = ViewContext.HttpContext.Request;
    var queryParams = new Dictionary<string, string>();
    
    foreach (var param in request.Query)
    {
        if (param.Key != "page")
        {
            queryParams[param.Key] = param.Value.ToString();
        }
    }
    
    string BuildUrl(int pageNum)
    {
        var query = new List<string> { $"page={pageNum}" };
        foreach (var param in queryParams)
        {
            query.Add($"{param.Key}={Uri.EscapeDataString(param.Value)}");
        }
        return $"{request.Path}?{string.Join("&", query)}";
    }

    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center mt-4">
            @if (Model.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" href="@BuildUrl(Model.CurrentPage - 1)" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <span class="page-link">&laquo;</span>
                </li>
            }

            @for (int i = Model.StartPage; i <= Model.EndPage; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" href="@BuildUrl(i)">@i</a>
                </li>
            }

            @if (Model.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link" href="@BuildUrl(Model.CurrentPage + 1)" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <span class="page-link">&raquo;</span>
                </li>
            }
        </ul>
    </nav>
}

