@using Microsoft.AspNetCore.Identity
@using PetGroomingApp.Data.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    @if (User.IsInRole("Admin"))
    {
        <li class="nav-item nav-order-1">
            <a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">
                <i class="fa fa-cog"></i> Admin
            </a>
        </li>
    }
    <li class="nav-item nav-order-2">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
            <i class="fa fa-user-circle"></i> @User.Identity?.Name
        </a>
    </li>
    <li class="nav-item nav-order-3">
        <form class="form-inline d-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link">
                <i class="fa fa-sign-out"></i> Logout
            </button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">
            <i class="fa fa-user-plus"></i> Register
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">
            <i class="fa fa-sign-in"></i> Login
        </a>
    </li>
}
