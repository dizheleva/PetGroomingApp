
<header>
    <div class="header-area ">
        <div class="header-top_area">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-8">
                        <div class="short_contact_list">
                            <ul>
                                <li><a href="#"><i class="fa fa-phone"></i> +359 88 123 4567</a></li>
                                <li><a href="#"><i class="fa fa-calendar"></i> Mon - Sat  10:00 - 18:00</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-4 ">
                        <div class="social_media_links">
                            <a href="https://www.facebook.com/">
                                <i class="fa fa-facebook"></i>
                            </a>
                            <a href="https://www.pinterest.com/">
                                <i class="fa fa-pinterest"></i>
                            </a>
                            <a href="https://www.instagram.com/">
                                <i class="fa fa-instagram"></i>
                            </a>
                            <a href="https://www.linkedin.com/">
                                <i class="fa fa-linkedin"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="sticky-header" class="main-header-area">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-xl-3 col-lg-3">
                        <div class="logo">
                            <a asp-controller="Home" asp-action="Index">
                                <img src="~/img/logo.png" alt="Logo">
                            </a>
                        </div>
                    </div>
                    <div class="col-xl-9 col-lg-9">
                        <div class="main-menu  d-none d-lg-block">
                            <nav>
                                <ul id="navigation">
                                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                                    <li><a asp-controller="Home" asp-action="About">About</a></li>
                                    <li><a asp-controller="Groomer" asp-action="Index">Groomers</a></li>
                                    <li>
                                        <a asp-controller="Service" asp-action="Index">Services <i class="ti-angle-down"></i></a>
                                        <ul class="submenu">                 
                                            <li><a href="#">Hair trimming</a></li>
                                            <li><a href="#">Bathing</a></li>
                                            <li><a href="#">Nail clipping</a></li>
                                            <li><a href="#">Ear cleaning</a></li>
                                        </ul>
                                    </li>
                                    <li><a asp-controller="Home" asp-action="Contact">Contact</a></li>
                                    @if (User?.Identity?.IsAuthenticated ?? false)
                                    {
                                        <li><a asp-controller="Favorites" asp-action="Index">Favorites</a></li>
                                        <li><a asp-controller="Appointment" asp-action="Index">Appointments</a></li>
                                        <li><a asp-area="" asp-controller="Service" asp-action="Create">Create Service</a></li>
                                    }
                                    <partial name="_LoginPartial" />
                                </ul>                                
                            </nav>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="mobile_menu d-block d-lg-none"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>    
</header>

