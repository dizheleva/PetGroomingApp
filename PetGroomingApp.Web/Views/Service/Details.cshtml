@using PetGroomingApp.Web.ViewModels.Service
@model ServiceDetailsViewModel

@{
	ViewData["Title"] = "Service Details";
}

<partial name="_PageTitle" />

<!-- Service Details Section -->
<div class="service_area pt-5 pb-5">
	<div class="container">
		<div class="row justify-content-center align-items-center">
			<!-- Image with Background -->
			<div class="col-md-5 mb-4 mb-md-0 d-flex justify-content-center">
				<div class="service_thumb d-flex align-items-center justify-content-center"
					 style="background-image: url('/img/service/service_icon_bg_1.png');
							background-size: contain;
							background-repeat: no-repeat;
							background-position: center;
							width: 220px;
							height: 220px;
							display: flex;
							align-items: center;
							justify-content: center;">
					<img src="~/@Model.ImageUrl" alt="@Model.Name" style="width: 80px; height: auto;">
				</div>
			</div>

			<!-- Details -->
			<div class="col-md-7">
				<h2 class="fw-bold mb-3">@Model.Name</h2>

				<p> @Model.Description</p>
				<p><strong>Duration:</strong> @Model.Duration</p>
				<p><strong>Price:</strong> @Model.Price</p>

				<!-- Buttons with spacing -->
				<div class="mt-4 d-flex flex-wrap gap-2">
					<div class="me-2 mb-2">
						<a asp-action="Index"
						   asp-controller="Service"
						   class="btn btn-secondary btn-sm rounded-pill px-4 fw-bold">
							<i class="bi bi-arrow-left-circle"></i> Back
						</a>
					</div>

					<div class="me-2 mb-2">
						<a asp-controller="Service"
						   asp-action="Edit"
						   asp-route-id="@Model.Id"
						   class="btn btn-info btn-sm rounded-pill px-4 fw-bold text-white">
							<i class="bi bi-pencil-square"></i> Edit
						</a>
					</div>

					<div class="mb-2">
						<a asp-controller="Service"
						   asp-action="Delete"
						   asp-route-id="@Model.Id"
						   class="btn btn-danger btn-sm rounded-pill px-4 fw-bold text-white">
							<i class="bi bi-trash"></i> Delete
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

