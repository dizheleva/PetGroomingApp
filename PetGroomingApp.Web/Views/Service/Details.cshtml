@using PetGroomingApp.Web.ViewModels.Service
@model ServiceDetailsViewModel

@{
	ViewData["Title"] = "Service Details";
}

<partial name="_PageTitle" />

<!-- Service Details Section -->
<section class="service_details_area py-5" style="background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%); min-height: 60vh;">
	<div class="container py-5">
		<div class="row justify-content-center">
			<div class="col-lg-10">
				<div class="service-details-card shadow-lg" style="background: white; border-radius: 20px; overflow: hidden; border: none;">
					<div class="row g-0">
						<!-- Image Section -->
						<div class="col-md-5">
							<div class="service-detail-image d-flex align-items-center justify-content-center" style="height: 100%; min-height: 400px; position: relative; padding: 40px; background: url('/img/service/service_icon_bg_1.png') center center no-repeat; background-size: 70%;">
								<div class="service_icon" style="max-width: 200px; max-height: 200px; position: relative; z-index: 2;">
									@{
										var detailImageSrc = Model.ImageUrl.StartsWith("http") ? Model.ImageUrl : (Model.ImageUrl.StartsWith("/") ? Model.ImageUrl : $"~/{Model.ImageUrl}");
									}
									<img src="@Url.Content(detailImageSrc)" alt="@Model.Name" class="img-fluid" style="filter: drop-shadow(0 8px 16px rgba(0,0,0,0.3));" />
								</div>
							</div>
						</div>

						<!-- Details Section -->
						<div class="col-md-7">
							<div class="service-detail-content p-5" style="height: 100%; min-height: 400px; display: flex; flex-direction: column; justify-content: space-between;">
								<div>
									<!-- Header -->
									<div class="mb-4">
										<h1 class="fw-bold mb-2" style="color: #2c3e50; font-size: 2.5rem; letter-spacing: -1px;">@Model.Name</h1>
									</div>

									<hr style="border-color: #e9ecef; margin: 2rem 0;" />

									<!-- Description -->
									@if (!string.IsNullOrWhiteSpace(Model.Description))
									{
										<div class="mb-4">
											<h5 class="fw-bold mb-3" style="color: #2c3e50;">
												<i class="fa fa-info-circle me-2" style="color: #f14437;"></i>Description
											</h5>
											<div class="p-3" style="background: #f8f9fa; border-radius: 12px; border-left: 4px solid #f14437;">
												<p class="text-muted mb-0" style="line-height: 1.6;">@Model.Description</p>
											</div>
										</div>
									}

									<!-- Details Grid -->
									<div class="row g-4 mb-4">
										<div class="col-sm-6">
											<div class="detail-item p-3" style="background: #f8f9fa; border-radius: 12px; border-left: 4px solid #f14437;">
												<div class="text-muted small mb-1" style="font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px;">Duration</div>
												<div class="fw-bold" style="color: #2c3e50; font-size: 1.1rem;">
													<i class="fa fa-clock me-2" style="color: #f14437;"></i>@Model.Duration
												</div>
											</div>
										</div>
										<div class="col-sm-6">
											<div class="detail-item p-3" style="background: #f8f9fa; border-radius: 12px; border-left: 4px solid #f14437;">
												<div class="text-muted small mb-1" style="font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px;">Price</div>
												<div class="fw-bold" style="color: #2c3e50; font-size: 1.1rem;">
													<i class="fa fa-tag me-2" style="color: #f14437;"></i>@Model.Price BGN
												</div>
											</div>
										</div>
									</div>
								</div>

								<!-- Action Buttons -->
								<div class="mt-4 pt-4 border-top">
									<div class="d-flex flex-wrap gap-3">
										<a asp-action="Index" asp-controller="Service" class="btn btn-back rounded-pill px-4 py-2 fw-bold" style="background: #6c757d; color: white; border: none; transition: all 0.3s ease; box-shadow: 0 4px 15px rgba(108, 117, 125, 0.3);">
											<i class="fa fa-arrow-left me-2"></i>Back to All Services
										</a>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

