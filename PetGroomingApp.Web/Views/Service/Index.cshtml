@using PetGroomingApp.Web.ViewModels.Service
@model IEnumerable<AllServicesIndexViewModel>

@{
    ViewData["Title"] = "All Services";
}

<partial name="_PageTitle" />

<!-- Services Section -->
<section class="service_area py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5">Services for Every Pet</h2>
            <p class="text-muted">
                Here your pet will always be treated with love, gentleness, and care.
                We make every visit as enjoyable and stress-free as possible.
            </p>
        </div>

        <!-- Search -->
        <div class="row justify-content-center mb-4">
            <div class="col-md-6">
                <form method="get" class="d-flex gap-2">
                    <input type="text" name="searchTerm" class="form-control rounded-pill" placeholder="Search services..." value="@ViewBag.SearchTerm">
                    <button type="submit" class="btn btn-primary-custom rounded-pill">Search</button>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary rounded-pill">Clear</a>
                </form>
            </div>
        </div>

        <div class="row justify-content-center">
            @foreach (var service in Model)
            {
                <div class="col-lg-4 col-md-6 d-flex align-items-stretch mb-4">
                    <div class="service-card shadow-lg d-flex flex-column w-100" style="background: white; border-radius: 16px; overflow: hidden; transition: all 0.3s ease; border: none;">
                        <div class="service-image-container d-flex align-items-center justify-content-center" style="height: 240px; border-radius: 16px 16px 0 0; overflow: hidden; position: relative; background: url('/img/service/service_icon_bg_1.png') center center no-repeat; background-size: 70%;">
                            <div class="service_icon" style="max-width: 120px; max-height: 120px; position: relative; z-index: 2;">
                                @{
                                    var serviceImageSrc = service.ImageUrl.StartsWith("http") ? service.ImageUrl : (service.ImageUrl.StartsWith("/") ? service.ImageUrl : $"~/{service.ImageUrl}");
                                }
                                <img src="@Url.Content(serviceImageSrc)" alt="@service.Name" class="img-fluid" style="filter: drop-shadow(0 4px 8px rgba(0,0,0,0.2));" />
                            </div>
                        </div>
                        <div class="service-content text-center p-4 d-flex flex-column flex-grow-1 justify-content-between" style="background: white;">
                            <div>
                                <h5 class="fw-bold mb-2" style="color: #2c3e50; font-size: 1.5rem; letter-spacing: -0.5px;">@service.Name</h5>
                                <p class="text-muted mb-3" style="line-height: 1.5;">@service.Description</p>
                            </div>
                            <div class="mt-3">
                                <a asp-controller="Service" asp-action="Details" asp-route-id="@service.Id" class="btn btn-details rounded-pill px-4 py-2 fw-bold" style="background: linear-gradient(135deg, #f14437 0%, #ff6b5a 100%); color: white; border: none; transition: all 0.3s ease; box-shadow: 0 4px 15px rgba(241, 68, 55, 0.3);">
                                    <i class="fa fa-info-circle me-2"></i> View Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (ViewBag.Pagination != null)
        {
            <partial name="_PaginationPartial" model="ViewBag.Pagination" />
        }
    </div>
</section>
