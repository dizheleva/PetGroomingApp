@using PetGroomingApp.Web.ViewModels.Service
@model IEnumerable<AllServicesIndexViewModel>

@{
    ViewData["Title"] = "All Services";
}

<div class="bradcam_area breadcam_bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="bradcam_text text-center">
                    <h3>@ViewData["Title"]</h3>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Service Section  -->
<div class="service_area">
    <div class="container">
        <div class="row justify-content-center ">
            <div class="col-lg-7 col-md-10">
                <div class="section_title text-center mb-95">
                    <h3>Services for every pet</h3>
                    <p>Here your pet will always be treated with love, gentleness and in a non-aggressive manner. We take precaution to ensure your pet is completely comfortable to make their visit as enjoyable as possible.</p>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            @foreach (var service in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="single_service">
                        <div class="service_thumb service_icon_bg_1 d-flex align-items-center justify-content-center">
                            <div class="service_icon">
                                <img src="@service.ImageUrl" alt="@service.Name">
                            </div>
                        </div>
                        <div class="service_content text-center">
                            <h3>@service.Name</h3>
                            <p style="margin-bottom: 30px">@service.Description</p>
                            <a asp-controller="Service" asp-action="Details" asp-route-id="@service.Id" class="boxed-btn3">Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>