@using PetGroomingApp.Web.ViewModels.Appointment
@model IEnumerable<AppointmentListViewModel>
@{
    ViewData["Title"] = "Appointments";
}

<div class="slider_area">
    <div class="single_slider d-flex align-items-center justify-content-center breadcam_bg">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-auto">
                    <div class="slider_text text-center">
                        <h3>Professional Pet Grooming</h3>
                        <p>Give your pets the love and care they deserve</p>
                        <a class="boxed-btn4" asp-controller="Appointment" asp-action="Create">Book Now</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="about_area py-5">
    <div class="container">
        <div class="row justify-content-center mb-4">
            <div class="col-lg-8 text-center">
                <h2 class="mb-1 display-6">My @ViewData["Title"]</h2>
                <hr class="w-25 mx-auto border-primary">
            </div>
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-warning text-center shadow-sm rounded-3">You have no appointments yet.</div>
        }
        else
        {
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="card shadow border-0 rounded-4">
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover align-middle mb-0">
                                    <thead class="text-center" style="background-color: #f14437; color: #fff;">
                                        <tr>
                                            <th scope="col" class="py-3">Date & Time</th>
                                            <th scope="col" class="py-3">Pet</th>
                                            <th scope="col" class="py-3">Status</th>
                                            <th scope="col" class="py-3">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var appt in Model)
                                        {
                                            <tr>
                                                <td class="text-center fw-semibold">
                                                    <i class="bi bi-calendar-event me-1 text-secondary"></i>
                                                    @appt.AppointmentTime.ToString("dd MMM yyyy, HH:mm")
                                                </td>
                                                <td class="fw-semibold">
                                                    <i class="bi bi-paw-fill me-1 text-primary"></i>
                                                    @appt.PetName
                                                </td>
                                                <td class="text-center">
                                                    <span class="badge px-3 py-2 fs-6 bg-@(
                                                          appt.Status == "Confirmed" ? "success" :
                                                          appt.Status == "Pending" ? "warning text-dark" :
                                                          appt.Status == "Cancelled" ? "danger" :
                                                          "secondary")">
                                                @appt.Status
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <a asp-action="Details" asp-route-id="@appt.Id" class="btn btn-sm btn-outline-info rounded-pill me-1" title="View Details">
                                                <i class="bi bi-info-circle"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@appt.Id" class="btn btn-sm btn-outline-primary rounded-pill me-1" title="Edit Appointment">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <a asp-action="Cancel" asp-route-id="@appt.Id" class="btn btn-sm btn-outline-danger rounded-pill" title="Cancel Appointment">
                                                <i class="bi bi-x-circle"></i>
                                            </a>
                                        </td>
                                    </tr>
                                                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
