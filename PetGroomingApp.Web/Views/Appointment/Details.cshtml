@using PetGroomingApp.Web.ViewModels.Appointment
@model AppointmentDetailsViewModel

@{
    ViewData["Title"] = "Appointment Details";
}

<partial name="_PageTitle" />

<section class="about_area py-5">
    <div class="container">
        <div class="row justify-content-center mb-4">
            <div class="col-lg-8 text-center">
                <hr class="w-25 mx-auto border-danger">
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow border-0 rounded-4 mb-4">
                    <div class="card-header primary-header text-white text-center py-4 rounded-top-4">
                        <h3 class="mb-0">
                            <i class="fa fa-calendar-check me-2"></i>Appointment Details
                        </h3>
                    </div>
                    <div class="card-body py-4 px-5">
                        <div class="row mb-3">
                            <div class="col-md-6 mb-3 mb-md-0">
                                <h5>
                                    <i class="fa fa-calendar me-2 text-secondary"></i>
                                    <span class="fw-bold">Date & Time:</span>
                                </h5>
                                <span class="fs-5">@Model.AppointmentTime.ToString("dd MMM yyyy, HH:mm")</span>
                            </div>
                            <div class="col-md-6">
                                <h5>
                                    <i class="fa fa-clock me-2 text-secondary"></i>
                                    <span class="fw-bold">Duration:</span>
                                </h5>
                                <span class="fs-5">@TimeSpan.FromMinutes(Model.Duration).ToString(@"hh\:mm") hours</span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6 mb-3 mb-md-0">
                                <h5>
                                    <i class="fa fa-user-tie me-2 text-secondary"></i>
                                    <span class="fw-bold">Groomer:</span>
                                </h5>
                                <span class="fs-5">@Model.GroomerName</span>
                            </div>
                            <div class="col-md-6">
                                <h5>
                                    <i class="fa fa-paw me-2 text-primary"></i>
                                    <span class="fw-bold">Pet:</span>
                                </h5>
                                <span class="fs-5">@Model.PetName</span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6 mb-3 mb-md-0">
                                <h5>
                                    <i class="fa fa-list-check me-2 text-secondary"></i>
                                    <span class="fw-bold">Services:</span>
                                </h5>
                                <ul class="list-unstyled mb-0">
                                    @foreach (var service in Model.Services)
                                    {
                                        <li>
                                            <i class="fa fa-check-circle text-success me-1"></i> @service
                                        </li>
                                    }
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <h5>
                                    <i class="fa fa-flag me-2 text-secondary"></i>
                                    <span class="fw-bold">Status:</span>
                                </h5>
                                <span class="badge px-3 py-2 fs-6 @(
                                      Model.Status == "Confirmed" ? "bg-success text-white" :
                                      Model.Status == "Pending" ? "bg-warning text-dark" :
                                      Model.Status == "Cancelled" ? "bg-danger text-white" :
                                      "bg-secondary text-white")">
                                    @Model.Status
                                </span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6 mb-3 mb-md-0">
                                <h5>
                                    <i class="fa fa-euro-sign me-2 text-success"></i>
                                    <span class="fw-bold">Total Price:</span>
                                </h5>
                                <span class="fs-5">@Model.Price.ToString("0.00") €</span>
                            </div>
                            <div class="col-md-6">
                                <h5>
                                    <i class="fa fa-sticky-note me-2 text-secondary"></i>
                                    <span class="fw-bold">Notes:</span>
                                </h5>
                                <span class="fs-6">@(!string.IsNullOrWhiteSpace(Model.Notes) ? Model.Notes : "—")</span>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12 d-flex justify-content-center gap-3">
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary-custom rounded-pill px-4 fw-bold">
                                    <i class="fa fa-edit me-2"></i>Edit
                                </a>
                                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 fw-semibold">
                                    <i class="fa fa-arrow-left me-2"></i>Back
                                </a>
                                <a asp-action="Cancel" asp-route-id="@Model.Id" class="btn btn-outline-danger rounded-pill px-4 fw-semibold">
                                    <i class="fa fa-times-circle me-2"></i>Cancel
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>