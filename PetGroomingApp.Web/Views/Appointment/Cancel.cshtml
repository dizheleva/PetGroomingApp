@using PetGroomingApp.Web.ViewModels.Appointment
@model AppointmentDetailsViewModel

@{
    ViewData["Title"] = "Cancel Appointment";
}

<partial name="_PageTitle" />

<section class="about_area py-5">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card shadow border-0 rounded-4">
                    <div class="card-body py-5 px-4 text-center">
                        <div class="mb-4">
                            <i class="bi bi-exclamation-octagon-fill text-danger" style="font-size: 3rem;"></i>
                        </div>
                        <h3 class="mb-3 text-danger">Cancel Appointment</h3>
                        <p class="fs-5 mb-4">
                            Are you sure you want to cancel the appointment for
                            <strong class="text-primary">@Model.PetName</strong> on
                            <strong>@Model.AppointmentTime.ToString("dd MMM yyyy, HH:mm")</strong>?
                        </p>
                        <form asp-action="CancelConfirmed" method="post" class="d-flex justify-content-center gap-3">
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn btn-danger fw-bold rounded-pill px-4">
                                <i class="bi bi-x-circle"></i> Yes, Cancel Appointment
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary fw-semibold rounded-pill px-4">
                                <i class="bi bi-arrow-left-circle"></i> No, Go Back
                            </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>