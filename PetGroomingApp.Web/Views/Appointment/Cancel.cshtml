@using PetGroomingApp.Web.ViewModels.Appointment
@model AppointmentDetailsViewModel

@{
    ViewData["Title"] = "Cancel Appointment";
}   

<partial name="_PageTitle" />

<section class="service_area">
    <div class="content">
        <p>Are you sure you want to cancel the appointment for <strong>@Model.PetName</strong>?</p>

        <form asp-action="CancelConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Yes, Cancel Appointment</button>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">No, Go Back</a>
        </form>
    </div>
</section>