@using PetGroomingApp.Web.ViewModels.Appointment
@model AppointmentFormViewModel
@{
    ViewData["Title"] = "Edit Appointment";
}

<partial name="_PageTitle" />

<section class="about_area">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form asp-action="Edit" method="post" class="bg-light p-4 rounded-4 shadow-sm border">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="AppointmentTime"></label>
                        <input asp-for="AppointmentTime" class="form-control" type="datetime-local" />
                        <span asp-validation-for="AppointmentTime" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Services">Select Services</label>
                        @foreach (var service in Model.Services)
                        {
                            <div class="form-check">
                                <input type="checkbox"
                                       class="form-check-input"
                                       name="SelectedServiceIds"
                                       value="@service.Name"
                                       @(Model.SelectedServiceIds.Contains(Guid.Parse(service.Name)) ? "checked" : "") />
                                <label class="form-check-label">@service.Name</label>
                            </div>
                        }
                    </div>

                    <div class="form-group">
                        <label asp-for="SelectedPetId">Pet</label>
                        <select asp-for="SelectedPetId" asp-items="Model.Pets" class="form-control"></select>
                        <span asp-validation-for="SelectedPetId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="SelectedGroomerId">Groomer</label>
                        <select asp-for="SelectedGroomerId" asp-items="Model.Groomers" class="form-control"></select>
                        <span asp-validation-for="SelectedGroomerId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Notes"></label>
                        <textarea asp-for="Notes" class="form-control"></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>

                    <div id="calculatedDuration" class="mt-2 text-info">
                        Duration: <span id="durationValue">0</span> minutes
                    </div>

                    <div id="totalPrice" class="mt-2 text-info">
                        Total Price: <span id="priceValue">0</span> €
                    </div>

                    <div class="text-center mt-4 d-flex justify-content-center gap-2">
                        <button type="submit" class="btn btn-success fw-bold px-4 rounded-pill">
                            <i class="bi bi-plus-circle"></i> Edit
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary fw-semibold px-4 rounded-pill">
                            <i class="bi bi-arrow-left-circle"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>