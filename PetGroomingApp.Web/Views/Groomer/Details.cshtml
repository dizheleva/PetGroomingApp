@model PetGroomingApp.Web.ViewModels.Groomer.GroomerDetailsViewModel

@{
    ViewData["Title"] = $"{Model.Name}";
}

<partial name="_PageTitle" />

<section class="team_area">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8">
                <div class="card shadow-lg border-0 p-4 rounded-4">
                    <div class="row g-4 align-items-center">
                        <div class="col-md-5 text-center">
                            <img src="~/@Model.ImageUrl" alt="@Model.Name"
                                 class="img-fluid rounded-3 shadow-sm" style="max-height: 300px; object-fit: cover;" />
                        </div>
                        <div class="col-md-7">
                            <h2 class="fw-bold text-primary">@Model.Name</h2>
                            <p class="text-muted fs-5">@Model.JobTitle</p>
                            <hr />
                            <p><strong>Phone:</strong> <a href="tel:@Model.PhoneNumber">@Model.PhoneNumber</a></p>

                            @if (!string.IsNullOrWhiteSpace(Model.Description))
                            {
                                <div class="mt-3">
                                    <h5>About</h5>
                                    <p class="text-muted">@Model.Description</p>
                                </div>
                            }
                            <!-- Buttons with spacing -->
                            <div class="mt-4 d-flex flex-wrap gap-2">
                                <div class="me-2 mb-2">
                                    <a asp-action="Index"
                                       asp-controller="Groomer"
                                       class="btn btn-secondary btn-sm rounded-pill px-4 fw-bold">
                                        <i class="bi bi-arrow-left-circle"></i> Back
                                    </a>
                                </div>

                                <div class="me-2 mb-2">
                                    <a asp-controller="Groomer"
                                       asp-action="Edit"
                                       asp-route-id="@Model.Id"
                                       class="btn btn-info btn-sm rounded-pill px-4 fw-bold text-white">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                </div>

                                <div class="mb-2">
                                    <a asp-controller="Groomer"
                                       asp-action="Delete"
                                       asp-route-id="@Model.Id"
                                       class="btn btn-danger btn-sm rounded-pill px-4 fw-bold text-white">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>