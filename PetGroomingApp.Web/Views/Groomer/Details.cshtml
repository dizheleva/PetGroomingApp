@model PetGroomingApp.Web.ViewModels.Groomer.GroomerDetailsViewModel

@{
    ViewData["Title"] = $"{Model.Name}";
}

<partial name="_PageTitle" />

<!-- Groomer Details Section -->
<section class="groomer_details_area py-5" style="background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%); min-height: 60vh;">
	<div class="container py-5">
		<div class="row justify-content-center">
			<div class="col-lg-10">
				<div class="groomer-details-card shadow-lg" style="background: white; border-radius: 20px; overflow: hidden; border: none;">
					<div class="row g-0">
						<!-- Image Section -->
						<div class="col-md-5">
							@if (string.IsNullOrWhiteSpace(Model.ImageUrl))
							{
								<div class="groomer-detail-image d-flex align-items-center justify-content-center" style="height: 100%; min-height: 400px; background: linear-gradient(135deg, #f14437 0%, #ff6b5a 100%); position: relative; padding: 40px;">
									<div style="position: relative; z-index: 2; text-align: center;">
										<i class="fa fa-user-tie" style="font-size: 150px; color: white; filter: drop-shadow(0 8px 16px rgba(0,0,0,0.3));"></i>
									</div>
									<div style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: url('/img/service/service_icon_bg_1.png') center/contain no-repeat; opacity: 0.1; z-index: 1;"></div>
								</div>
							}
							else
							{
								<div class="groomer-detail-image" style="height: 100%; min-height: 400px; overflow: hidden; background: linear-gradient(135deg, #f5f5f5 0%, #e8e8e8 100%); position: relative;">
									@{
										var groomerDetailImageSrc = Model.ImageUrl.StartsWith("http") ? Model.ImageUrl : (Model.ImageUrl.StartsWith("/") ? Model.ImageUrl : $"~/{Model.ImageUrl}");
									}
									<img src="@Url.Content(groomerDetailImageSrc)" alt="@Model.Name" class="img-fluid" style="width: 100%; height: 100%; object-fit: cover;" />
									<div style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: linear-gradient(to bottom, transparent 0%, rgba(0,0,0,0.05) 100%); pointer-events: none;"></div>
								</div>
							}
						</div>

						<!-- Details Section -->
						<div class="col-md-7">
							<div class="groomer-detail-content p-5" style="height: 100%; min-height: 400px; display: flex; flex-direction: column; justify-content: space-between;">
								<div>
									<!-- Header -->
									<div class="mb-4">
										<h1 class="fw-bold mb-2" style="color: #2c3e50; font-size: 2.5rem; letter-spacing: -1px;">@Model.Name</h1>
										<div class="d-flex align-items-center gap-3 flex-wrap">
											<span class="badge rounded-pill" style="background: linear-gradient(135deg, #f14437 0%, #ff6b5a 100%); color: white; padding: 8px 18px; font-size: 1rem; font-weight: 600;">
												<i class="fa fa-user-tie me-2"></i>@Model.JobTitle
											</span>
										</div>
									</div>

									<hr style="border-color: #e9ecef; margin: 2rem 0;" />

									<!-- Details Grid -->
									<div class="row g-4 mb-4">
										<div class="col-sm-12">
											<div class="detail-item p-3" style="background: #f8f9fa; border-radius: 12px; border-left: 4px solid #f14437;">
												<div class="text-muted small mb-1" style="font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px;">Phone Number</div>
												<div class="fw-bold" style="color: #2c3e50; font-size: 1.1rem;">
													<i class="fa fa-phone me-2" style="color: #f14437;"></i>
													<a href="tel:@Model.PhoneNumber" style="color: #2c3e50; text-decoration: none;">@Model.PhoneNumber</a>
												</div>
											</div>
										</div>
									</div>

									<!-- Description -->
									@if (!string.IsNullOrWhiteSpace(Model.Description))
									{
										<div class="mt-3">
											<h5 class="fw-bold mb-3" style="color: #2c3e50;">
												<i class="fa fa-info-circle me-2" style="color: #f14437;"></i>About
											</h5>
											<div class="p-3" style="background: #f8f9fa; border-radius: 12px; border-left: 4px solid #f14437;">
												<p class="text-muted mb-0" style="line-height: 1.6;">@Model.Description</p>
											</div>
										</div>
									}
								</div>

								<!-- Action Buttons -->
								<div class="mt-4 pt-4 border-top">
									<div class="d-flex flex-wrap gap-3">
										@if (User.IsInRole("Admin"))
										{
											<a asp-controller="Groomer" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-edit rounded-pill px-4 py-2 fw-bold" style="background: linear-gradient(135deg, #17a2b8 0%, #138496 100%); color: white; border: none; transition: all 0.3s ease; box-shadow: 0 4px 15px rgba(23, 162, 184, 0.3);">
												<i class="fa fa-edit me-2"></i>Edit
											</a>
											<a asp-controller="Groomer" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-delete rounded-pill px-4 py-2 fw-bold" style="background: linear-gradient(135deg, #dc3545 0%, #c82333 100%); color: white; border: none; transition: all 0.3s ease; box-shadow: 0 4px 15px rgba(220, 53, 69, 0.3);">
												<i class="fa fa-trash me-2"></i>Delete
											</a>
										}
                                        <a asp-action="Index" asp-controller="Groomer" class="btn btn-back rounded-pill px-4 py-2 fw-bold" style="background: #6c757d; color: white; border: none; transition: all 0.3s ease; box-shadow: 0 4px 15px rgba(108, 117, 125, 0.3);">
											<i class="fa fa-arrow-left me-2"></i>Back to All Groomers
										</a>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>